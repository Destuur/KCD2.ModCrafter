<MudGrid >

    <MudItem lg="12" Class="mb-n4">
        <MudSelect @bind-Value="path" Label="Choose Mod Icon (optional)" Variant="Variant.Outlined" Margin="Margin.Dense">
            <MudSelectItem Value="@("images/Icons/crime_combat_active.png")">
                <img src="images/Icons/crime_combat_active.png" height="14" class="mr-1" />Active Combat Bunny 1
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_combat_active_0.png")">
                <img src="images/Icons/crime_combat_active_0.png" height="14" class="mr-1" /> Active Combat Bunny 2
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_combat_passive.png")">
                <img src="images/Icons/crime_combat_passive.png" height="14" class="mr-1" /> Passive Combat Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_confronting_general.png")">
                <img src="images/Icons/crime_confronting_general.png" height="14" class="mr-1" /> Confronting General Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_confronting_trespass.png")">
                <img src="images/Icons/crime_confronting_trespass.png" height="14" class="mr-1" /> Confronting Trespass Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_detected.png")">
                <img src="images/Icons/crime_detected.png" height="14" class="mr-1" /> Detected Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_investigating.png")">
                <img src="images/Icons/crime_investigating.png" height="14" class="mr-1" /> Investigating Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_looking.png")">
                <img src="images/Icons/crime_looking.png" height="14" class="mr-1" /> Looking Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_recognising.png")">
                <img src="images/Icons/crime_recognising.png" height="14" class="mr-1" /> Recognising Bunny
            </MudSelectItem>
            <MudSelectItem Value="@("images/Icons/crime_reporting.png")">
                <img src="images/Icons/crime_reporting.png" height="14" class="mr-1" /> Reporting Bunny
            </MudSelectItem>
        </MudSelect>
    </MudItem>

    <MudItem lg="12" hidden="@(string.IsNullOrEmpty(path))" Class="d-flex justify-center">
        <MudImage Height="150" Src="@path" />
    </MudItem>

</MudGrid>