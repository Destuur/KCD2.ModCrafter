@if (mods is not null)
{
	<MudGrid Justify="Justify.SpaceBetween" Style="display: flex; align-items: center;" Class="pb-3">
		<MudItem>
			<MudText Class="pb-1" Style="font-weight: bold" Typo="Typo.subtitle1">Created</MudText>
		</MudItem>
		<MudItem>
			<MudButton Class="button-cancel" Style="font-size: 0.8rem !important; padding: 0.4rem 0.8rem !important;" OnClick="DeleteAllMods" Disabled="@(ModService.GetAllMods().Count == 0)">Delete All</MudButton>
		</MudItem>
	</MudGrid>

	<MudGrid>

		@foreach (var mod in mods)
		{
			<MudItem xs="2" sm="2" md="2" lg="2">
				<MudPaper Class="card" Outlined="true" Elevation="0">
					<ModListItem Mod="mod" @key="mod.ModId" OnDelete="DeleteMod"></ModListItem>
				</MudPaper>
			</MudItem>
		}

	</MudGrid>
}