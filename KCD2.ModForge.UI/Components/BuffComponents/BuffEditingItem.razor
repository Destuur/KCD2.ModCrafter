
<MudGrid Spacing="5" Justify="Justify.FlexStart" Class="pa-4">

	<MudItem sm="12">
		<MudText Typo="Typo.h6">@Buff.Localization.GetName("de")</MudText>
	</MudItem>

	@foreach (var attribute in sortedAttributes)
	{
		<MudItem xs="12" sm="12" md="12" lg="12">
			<CascadingValue Value="attribute">
				<AttributeSelector></AttributeSelector>
			</CascadingValue>
		</MudItem>
	}

