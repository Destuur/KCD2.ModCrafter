@using KCD2.ModForge.Shared.Models.ModItems
@if (BuffItems is not null)
{
	<MudGrid class="px-4 pt-3" Spacing="4" Justify="Justify.FlexStart">
		<MudItem xs="12" sm="12" md="12" lg="12">
			<MudStack class="px-2 mr-4" Row="true">
				<MudTextField @bind-Value="SearchBuff" Immediate="true" Label="Search" OnKeyUp="SearchBuffs" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentIcon="@Icons.Material.Outlined.Search"></MudTextField>
				<MudTextField @bind-Value="SearchBuff" Immediate="true" Label="Search" OnKeyUp="SearchBuffs" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentIcon="@Icons.Material.Outlined.Search"></MudTextField>
				@* <MudSelect>
					<MudSelectItem ></MudSelectItem>
				</MudSelect> *@
				<MudSpacer />
				<MudBadge Content="@ModService.Mod.ModItems.Count" Overlap="true" Color="Color.Primary" Visible="@(ModService.Mod.ModItems.Count > 0)">
					<MudImage Src="@GetForgeIcon()" Height="55" Style="cursor: pointer" />
				</MudBadge>
			</MudStack>
		</MudItem>
		<MudItem xs="12" sm="12" md="12" lg="12">
			<MudPaper Class="d-flex flex-column overflow-x-auto px-2 ma-0" Height="calc(100vh - 208px)" Elevation="0" Outlined="false" Style="background-color: transparent">
				<MudGrid>
					@foreach (var buffItem in BuffItems)
					{
						@if (buffItem is not Buff buff)
						{
							continue;
						}
						@* @if (perk.Localizations.Count == 0)
				{
					continue;
				} *@
						<BuffListItem Buff="buff"></BuffListItem>
					}
				</MudGrid>
			</MudPaper>
		</MudItem>
	</MudGrid>
}
