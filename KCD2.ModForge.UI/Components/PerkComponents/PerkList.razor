@using KCD2.ModForge.Shared.Models.ModItems
@if (PerkItems is not null)
{
	<MudTextField @bind-Value="SearchPerk" Immediate="true" Label="Search" OnKeyUp="SearchPerks" Variant="Variant.Outlined" Margin="Margin.Dense" AdornmentIcon="@Icons.Material.Outlined.Search"></MudTextField>

	<MudGrid class="px-4" Spacing="2" Justify="Justify.FlexStart">		

			@foreach (var perkItem in PerkItems)
			{
				@if (perkItem is not Perk perk)
				{
					continue;
				}
				@* @if (perk.Localizations.Count == 0)
				{
					continue;
				} *@
				<PerkListItem Perk="perk"></PerkListItem>
			}

	</MudGrid>
}
