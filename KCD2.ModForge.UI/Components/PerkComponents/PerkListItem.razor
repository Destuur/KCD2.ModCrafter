@if (Perk is not null)
{
	<MudItem xs="12" sm="12" md="12">
		<MudCard Class="mudcard no-select card-hover-effect" @onclick="EditPerk">
			<MudCardContent>

				@if (Perk.Localization == null ||
					(Perk.Localization.Names == null ||
					Perk.Localization.Names.Count == 0))
				{
					<MudText>No localization data available</MudText>
				}
				else
				{
					<MudText Typo="Typo.subtitle1">@(Perk.Localization.GetName(languageKey) ?? "No Name")</MudText>
					<MudText Typo="Typo.body2">@(Perk.Localization.GetDescription(languageKey) ?? "No Description")</MudText>
					<MudText Typo="Typo.body2">@(Perk.Localization.GetLoreDescription(languageKey) ?? "No Lore")</MudText>
				}


			</MudCardContent>
		</MudCard>
	</MudItem>
}