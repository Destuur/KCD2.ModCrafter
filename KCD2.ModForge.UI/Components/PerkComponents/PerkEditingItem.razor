
<MudGrid Spacing="5" Justify="Justify.FlexStart" Class="pa-4">

	@foreach (var attribute in Perk.Attributes)
	{
		<MudItem xs="6" sm="6" md="6" lg="6">
			<CascadingValue Value="attribute">
				<AttributeSelector></AttributeSelector>
			</CascadingValue>
		</MudItem>
	}

