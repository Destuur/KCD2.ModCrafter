
<MudGrid Spacing="5" Justify="Justify.FlexStart" Class="pa-4">

	@foreach (var attribute in Perk.Attributes)
	{
		<MudItem lg="6">
			<MudTextField Immediate="true" Margin="Margin.Dense" Value="attribute.Value" Label="@(attribute.Key)" Variant="Variant.Outlined"></MudTextField>
		</MudItem>
	}

	@foreach (var localization in Perk.Localizations)
	{
		<MudItem lg="6">
			<MudTextField Immediate="true" Margin="Margin.Dense" AutoGrow="true" @bind-Value="localization.Description" Label="@(localization.Language)" Variant="Variant.Outlined"></MudTextField>
		</MudItem>
	}

</MudGrid>

<MudButton OnClick="SavePerk">Save</MudButton>

<MudStack Row="true" Class="px-4 mt-4">
	<MudButton FullWidth="true" Variant="Variant.Outlined" Color="Color.Error">Cancel</MudButton>
	<MudButton FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="SavePerk">Save</MudButton>
</MudStack>