@if (Attribute is not null)
{
	@switch (Attribute.Value)
	{
		case bool:
			<BoolAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			break;
		case Enum:
			<MudItem xs="6" sm="6" md="6" lg="6" Class="mx-0">
				<EnumAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			</MudItem>
			break;
		case double:
			<MudItem xs="6" sm="6" md="6" lg="6" Class="mx-0">
				<DoubleAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			</MudItem>
			break;
		case int:
			<MudItem xs="6" sm="6" md="6" lg="6" Class="mx-0">
				<IntAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			</MudItem>
			break;
		case string:
			<MudItem xs="6" sm="6" md="6" lg="6" Class="mx-0">
				<StringAttribute Attribute="Attribute" RemoveAttribute="Remove" />
			</MudItem>
			break;
		case IList<BuffParam>:
			<MudItem xs="12" sm="12" md="12" lg="12">
				<MudCard Class="pa-4 border-2" Elevation="0" Outlined="true">
					<MudGrid Spacing="4">
						<MudItem xs="11" sm="11" md="11" lg="11">
							<MudButton FullWidth="true" Variant="Variant.Outlined" Color="Color.Primary" OnClick="AddBuffParam">Add Buff Parameter</MudButton>
						</MudItem>
						<MudItem xs="1" sm="1" md="1" lg="1">
							<MudButton FullWidth="true" Variant="Variant.Outlined" Color="Color.Secondary" OnClick="@(() => Remove(Attribute.Name))">Remove</MudButton>
						</MudItem>
						<MudItem xs="12" sm="12" md="12" lg="12">
							<BuffParamsAttribute Attribute="Attribute" @ref="childComponent" />
						</MudItem>
					</MudGrid>
				</MudCard>
			</MudItem>
			break;
		default:
			<MudText>Unknown attribute type</MudText>
			break;
	}
}