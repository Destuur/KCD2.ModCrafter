@if (Attribute is not null)
{
	<MudTextField @bind-Value="CurrentValue" Label="@FormatLabel(Attribute.Name)" Variant="Variant.Outlined" Margin="Margin.Dense" AutoGrow="true" Adornment="Adornment.End" AdornmentColor="Color.Secondary" AdornmentIcon="@Icons.Material.Filled.Delete" IconSize="Size.Small" OnAdornmentClick="@(() => Remove(Attribute))">@Attribute.Value.ToString()</MudTextField>
}
