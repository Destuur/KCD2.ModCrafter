@page "/editing/buff/{Id}"

	<MudItem>
		<MudTabs>
			<MudTabPanel Text="Buff">
			<BuffEditingItem Buff="editingBuff"></BuffEditingItem>
			</MudTabPanel>
			<MudTabPanel Text="Buff Localization">
				<LocalizationComponent EditingModItem="editingBuff" OriginalModItem="originalBuff"></LocalizationComponent>
			</MudTabPanel>
		</MudTabs>
	</MudItem>

<MudStack Row="true" Class="px-4 mt-4">
	<MudButton FullWidth="true" Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
	<MudButton FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveBuff">Save</MudButton>
</MudStack>