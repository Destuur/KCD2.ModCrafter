@page "/modoverview"
@using KCD2.ModForge.Shared.Models.ModItems

@if (mod is not null)
{
	<MudText class="pl-6" Typo="Typo.h4" Style="font-weight: bold;">OVERVIEW</MudText>

	<MudPaper Class="d-flex flex-column overflow-x-auto" Height="calc(100vh - 134px)" Elevation="0" Outlined="false" Style="background-color: transparent">
		<MudGrid Justify="Justify.FlexStart" Class="px-6 py-4">


			@foreach (var modItem in mod.ModItems)
			{

				@if (modItem is Perk perk)
				{
					<PerkListItem Perk="perk" Placeholder="@perk.Name"></PerkListItem>
				}

				@if (modItem is Buff buff)
				{
					<BuffListItem Buff="buff" Placeholder="@buff.Name"></BuffListItem>
				}
			}

		</MudGrid>
	</MudPaper>

	<MudStack Row="true" Class="px-4 mt-4">
		<MudButton Class="button-prominent" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" OnClick="ExportMod">Create Mod</MudButton>
	</MudStack>
}