<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="KCD2.XML.Tool.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:KCD2.XML.Tool.Components"
             xmlns:local="clr-namespace:KCD2.PTF.Tool">

    <BlazorWebView x:Name="blazorWebView"
                   HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent ComponentType="{x:Type components:Routes}"
                           Selector="#app" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
