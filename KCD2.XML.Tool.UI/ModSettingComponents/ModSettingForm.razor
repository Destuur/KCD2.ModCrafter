<MudStack Spacing="0">
	<MudTextField @bind-Value="@name" Validation="@(new Func<string, string>(ValidateModName))" Label="Mod Name" Variant="Variant.Outlined" Margin="Margin.Dense" Immediate="true" OnKeyUp="GetModId" Required="true"></MudTextField>
	<MudTextField @bind-Value="@description" Label="Description" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
	<MudTextField @bind-Value="@author" Label="Author" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
	<MudTextField @bind-Value="@version" Label="Mod Version" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
	<MudTextField @bind-Value="@createdOn" Label="Created On" Format="yyyy-MM-dd" InputType="InputType.Date" Variant="Variant.Outlined" Margin="Margin.Dense"/>
	<MudTextField @bind-Value="@modId" Label="Mod ID" Variant="Variant.Outlined" Margin="Margin.Dense" ReadOnly="true" Required="true"></MudTextField>
	<MudSwitch Class="py-2" Size="Size.Medium" T="bool" Color="Color.Primary" @bind-Value="@modifiesLevel" Label="Modifies Level"></MudSwitch>	
	<SupportedGameVersionRow @ref="supportedGameVersionRow"></SupportedGameVersionRow>
</MudStack>