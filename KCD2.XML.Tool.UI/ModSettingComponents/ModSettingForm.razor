<MudTextField @bind-Value="@name" Validation="@(new Func<string, string>(ValidateModName))" Label="Name der Mod" Variant="Variant.Outlined" Margin="Margin.Dense" Immediate="true" OnKeyUp="GetModId" Required="true"></MudTextField>
<MudTextField @bind-Value="@description" Label="Beschreibung" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
<MudTextField @bind-Value="@author" Label="Author" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
<MudTextField @bind-Value="@version" Label="Mod Version" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
<MudTextField @bind-Value="@createdOn" Label="Created On" T="DateTime" Format="s" InputType="InputType.DateTimeLocal" Variant="Variant.Outlined" Margin="Margin.Dense"/>
<MudTextField @bind-Value="@modId" Label="Mod ID" Variant="Variant.Outlined" Margin="Margin.Dense" ReadOnly="true" Required="true"></MudTextField>
<MudSwitch T="bool" Color="Color.Primary" @bind-Value="@modifiesLevel" Label="Modifies Level" Margin="Margin.Dense"></MudSwitch>
<MudText Class="pl-1 pt-1">Supported Game Versions</MudText>
<SupportedGameVersionRow @ref="supportedGameVersionRow"></SupportedGameVersionRow>