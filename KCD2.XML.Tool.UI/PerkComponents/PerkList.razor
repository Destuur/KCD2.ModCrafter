@if (PerkItems is not null)
{
	<MudTextField @bind-Value="SearchPerk" Immediate="true" OnKeyUp="SearchPerks"></MudTextField>

	<MudGrid class="px-4" Spacing="6" Justify="Justify.SpaceEvenly">		

			@foreach (var perkItem in PerkItems)
			{
				@if (perkItem is not Perk perk)
				{
					continue;
				}
				@if (perk.Localizations.Count == 0)
				{
					continue;
				}
				<PerkListItem Perk="perk"></PerkListItem>
			}

	</MudGrid>
}
