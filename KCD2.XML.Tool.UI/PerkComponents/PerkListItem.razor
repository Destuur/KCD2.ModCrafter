@if (Perk is not null)
{	
	<MudItem xs="3">
		<MudCard Class="mudcard no-select card-hover-effect">
			<MudCardContent>
				<MudContainer Class="d-flex justify-center align-center">
					<MudImage Class="card-image" ObjectPosition="ObjectPosition.Center" Src="images/Icons/Trigger_icon.png" Height="50"/>	
				</MudContainer>

				@if (Perk.Localizations!.Count == 0)
				{
					@* <MudText>@(perk.Localizations.FirstOrDefault(x => x.Attribute == nameAttribute).Value)</MudText> *@
					return;					
				}

				<MudText Align="Align.Center">@(Perk.Localizations.FirstOrDefault(x => x.Attribute == nameAttribute)!.Value)</MudText>
				@* <MudText>@(Perk.Localizations.FirstOrDefault(x => x.Attribute == descAttribute)!.Value)</MudText>
				<MudText>@(Perk.Localizations.FirstOrDefault(x => x.Attribute == loreDescAttribute)!.Value)</MudText> *@

			</MudCardContent>
		</MudCard>
	</MudItem>
}