@if (Perk is not null)
{	
	<MudListItem T="IModItem">
		<MudGrid>
			<MudItem lg="12">
				<MudImage Src="@mod!.ImagePath" Height="50" />
			</MudItem>
			<MudItem>
				@if (Perk.Localizations!.Count == 0)
				{
					@* <MudText>@(perk.Localizations.FirstOrDefault(x => x.Attribute == nameAttribute).Value)</MudText> *@
					return;					
				}

				<MudText>@(Perk.Localizations.FirstOrDefault(x => x.Attribute == nameAttribute).Value)</MudText>
				<MudText>@(Perk.Localizations.FirstOrDefault(x => x.Attribute == descAttribute).Value)</MudText>
				<MudText>@(Perk.Localizations.FirstOrDefault(x => x.Attribute == descAttribute).Value)</MudText>

			</MudItem>
		</MudGrid>
	</MudListItem>
}