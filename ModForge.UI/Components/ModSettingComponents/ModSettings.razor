<MudPaper Class="d-flex flex-column overflow-x-auto pa-0 ma-0" Height="calc(100vh - 96px)" Elevation="0" Outlined="false" Style="background-color: transparent">
	<MudGrid Spacing="2" Class="px-4">

		<MudItem md="12" sm="12" xs="12">
			<ModSettingForm OnValidityChanged="UpdateChildValidity" @ref="modSettingForm"></ModSettingForm>
		</MudItem>

	</MudGrid>
</MudPaper>
<MudItem xs="12">
	<MudStack Row="true" Class="px-4 my-4">
		<MudButton Class="button-cancel" FullWidth="true" Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
		<MudButton Class="button-prominent" Disabled="!isChildValid" FullWidth="true" Variant="Variant.Outlined" OnClick="StartModding">Start Modding</MudButton>
	</MudStack>
</MudItem>


